<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:text="@string/location_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#E3350D"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        <TextView
            android:text="@string/location_instruction"
            android:textSize="16sp"
            android:textColor="#B0B0B0"
            android:layout_marginBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        <EditText
            android:id="@+id/etFecha"
            android:hint="@string/date_hint"
            android:textColorHint="#B0B0B0"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:autofillHints="birthDate"/>

        <EditText
            android:id="@+id/etPais"
            android:hint="@string/country_hint"
            android:textColorHint="#B0B0B0"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:autofillHints="countryName"/>

        <EditText
            android:id="@+id/etCiudad"
            android:hint="@string/city_hint"
            android:textColorHint="#B0B0B0"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:autofillHints="addressRegion"/>

        <EditText
            android:id="@+id/etDireccion"
            android:hint="@string/address_hint"
            android:textColorHint="#B0B0B0"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:autofillHints="postalAddress"/>

        <Button
            android:id="@+id/btnGuardar"
            android:text="@string/save_button"
            android:backgroundTint="#E3350D"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"/>

        <Button
            android:id="@+id/btnRegresar"
            android:text="@string/return_to_menu_button"
            android:backgroundTint="#E3350D"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>