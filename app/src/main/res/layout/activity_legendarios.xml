<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:text="Pokémon Legendarios"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#E3350D"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Tarjeta con un Pokémon legendario -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="20dp"
            card_view:cardBackgroundColor="#1E1E1E"
            android:elevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imgLegendario"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_foreground"/>

                <TextView
                    android:id="@+id/txtDescripcionLegendario"
                    android:text="Articuno, Zapdos y Moltres son los pájaros legendarios de Kanto."
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botón volver -->
        <Button
            android:id="@+id/btnVolverLegendarios"
            android:text="Volver al Menú"
            android:backgroundTint="#E3350D"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
